<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImageCollageFragment">

    <ImageView
        android:id="@+id/collageImage1"
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <ImageView
        android:id="@+id/collageImage2"
        android:layout_width="222dp"
        android:layout_height="172dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_img"
        app:layout_constraintBottom_toTopOf="@+id/collageImage1"
        app:layout_constraintEnd_toStartOf="@+id/collageImage3"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/collageImage3"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_img"
        app:layout_constraintBottom_toTopOf="@+id/collageImage1"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/collageImage4"
        android:layout_width="141dp"
        android:layout_height="157dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_img"
        app:layout_constraintEnd_toStartOf="@+id/collageImage5"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collageImage1" />

    <ImageView
        android:id="@+id/collageImage5"
        android:layout_width="202dp"
        android:layout_height="157dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collageImage1" />
</androidx.constraintlayout.widget.ConstraintLayout>